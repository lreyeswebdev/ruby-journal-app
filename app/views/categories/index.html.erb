<%= link_to 'New Category', new_category_path %>
<br>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>

    <tbody>
        <%= @categories.each do |category| %>
            <tr>
                <td><%= category.id %></td>
                <td><%= category.name %></td>
                <td><%= category.description %></td>
                <td><%= link_to 'Edit', edit_category_path(category) %></td>
                <td><%= link_to 'Show', show_category_path(category) %></td>
                <td><%= link_to 'Delete', delete_category_path(category), method: :delete, data: {confirm: "Are you sure?"} %></td>
            </tr>
        <% end %>
    </tbody>
<table>