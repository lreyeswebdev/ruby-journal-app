<%= form_with scope: :category, url: create_category_path, local: true do |f| %>
    <p>
        <% if @category.errors.any? %>
            <ul>
                <% @category.errors.full_messages.each do |message| %>
                    <li>
                        <%= message%>
                    </li>
                <% end %>
            </ul>
        <% end %>
    </p>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :description %>
        <%= f.text_field :description %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>