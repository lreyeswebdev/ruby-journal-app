<div class = "columns is-centered mt-6">
    <div class = "column is-half">
        <h1 class = "is-size-2 has-text-weight-bold mb-3">New Category</h1>

		<%= form_with model: @category, local: true do |f| %>
            <p>
                <% if @category.errors.any? %>
                    <ul>
                        <% @category.errors.full_messages.each do |message| %>
                            <li style = "color: red">
                                * <%= message%>
                            </li>
                        <% end %>
                    </ul>
                <% end %>
            </p>
            <br>

            <div class = "field">
                <div class = "control">
                    <%= f.label :name %>
                    <%= f.text_field :name, class: "input" %>
                </div>
            </div>

            <div class = "field">
                <div class = "control">
                    <%= f.label :description %>
                    <%= f.text_field :description, class: "input" %>
                </div>
            </div>
            <br>

            <div class = "field">
                <div class = "control">
                    <%= f.submit :Submit, class: "button is-success" %>
                    <%= link_to 'Back to Categories', categories_path, class: "button" %>
                </div>
            </div>
    
		<% end %>
	</div>
</div>