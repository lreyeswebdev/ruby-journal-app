<div class = "columns is-centered mt-6">
    <div class = "column is-two-thirds">
    <h1 class = "is-size-2 has-text-weight-bold mb-3">Tasks</h1>
<br>
<table class = "table is-striped is-bordered is-fullwidth">
    <thead>
        <tr class="th is-selected">
            <th>Category</th>
            <th>Name</th>
            <th>Details</th>
            <th>Deadline</th>
            <th>Started</th>
            <th>Completed</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        <% @tasks.each do |task| %>
            <% category = Category.find(task.category.id) %>
            <tr>
                <td><%= link_to category.name, show_category_path(category.id) %></td>
                <td><%= link_to task.name, show_task_path(task) %></td>
                <td><%= task.details %></td>
                <td><%= task.deadline %></td>
                <td><%= task.started %></td>
                <td><%= task.completed %></td>
                <td>
                    <div class = "field is-grouped" >
                    	<div class = "control">
                            <%= link_to 'Edit', edit_task_path(task), class: "button is-small is-warning" %>
                        </div>
                        <div class = "control">
                            <%= link_to 'Delete', delete_task_path(task), method: :delete, data: {confirm: "Are you sure?"}, class: "button is-small is-danger" %>
                        </div>
                    </div>
                </td>
            </tr>
            
        <% end %>
    </tbody>
<table>

	</div>
</div>